{% extends 'base.html.twig' %}

{% block title %}Payment - Credit Card Form{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .payment-form {
            max-width: 800px;
            margin: 0 auto;
            padding: 30px;
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }
        .form-section {
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid #dee2e6;
        }
        .form-section-title {
            color: #2c3e50;
            font-weight: bold;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid #3498db;
        }
        .credit-card-icon {
            width: 40px;
            margin-left: 10px;
        }
        .form-row {
            display: flex;
            flex-wrap: wrap;
            margin-right: -5px;
            margin-left: -5px;
        }
        .form-group {
            padding-right: 5px;
            padding-left: 5px;
        }
        .card-types {
            display: flex;
            gap: 10px;
            margin-top: 10px;
        }
        .card-type {
            width: 50px;
            opacity: 0.6;
        }
        .card-type.active {
            opacity: 1;
            border: 2px solid #3498db;
            border-radius: 5px;
        }
        .required-field::after {
            content: " *";
            color: #e74c3c;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="payment-form">
            <h1 class="text-center mb-4">
                <i class="fas fa-credit-card me-2"></i>Payment Information
            </h1>
            
            {{ form_start(form, {'attr': {'class': 'payment-form-container', 'id': 'payment-form'}}) }}
            
            {# Card Information Section #}
            <div class="form-section">
                <h3 class="form-section-title">
                    <i class="fas fa-credit-card me-2"></i>Card Information
                </h3>
                
                <div class="row mb-3">
                    <div class="col-md-12">
                        {{ form_row(form.cardNumber, {
                            'row_attr': {'class': 'form-group mb-3'},
                            'label_attr': {'class': 'form-label fw-bold required-field'},
                            'attr': {'class': 'form-control'}
                        }) }}
                        
                        <div class="card-types">
                            <img src="{{ asset('images/visa.png') }}" alt="Visa" class="card-type" id="visa-icon">
                            <img src="{{ asset('images/mastercard.png') }}" alt="MasterCard" class="card-type" id="mastercard-icon">
                            <img src="{{ asset('images/amex.png') }}" alt="American Express" class="card-type" id="amex-icon">
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.expirationDate, {
                            'row_attr': {'class': 'form-group mb-3'},
                            'label_attr': {'class': 'form-label fw-bold required-field'}
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.cvv, {
                            'row_attr': {'class': 'form-group mb-3'},
                            'label_attr': {'class': 'form-label fw-bold required-field'},
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                </div>
            </div>
            
            {# Billing Address Section #}
            <div class="form-section">
                <h3 class="form-section-title">
                    <i class="fas fa-home me-2"></i>Billing Address
                </h3>
                
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.billingAddress.firstName, {
                            'row_attr': {'class': 'form-group mb-3'},
                            'label_attr': {'class': 'form-label fw-bold required-field'},
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.billingAddress.lastName, {
                            'row_attr': {'class': 'form-group mb-3'},
                            'label_attr': {'class': 'form-label fw-bold required-field'},
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                </div>
                
                {{ form_row(form.billingAddress.country, {
                    'row_attr': {'class': 'form-group mb-3'},
                    'label_attr': {'class': 'form-label fw-bold required-field'},
                    'attr': {'class': 'form-control'}
                }) }}
                
                {{ form_row(form.billingAddress.addressLine1, {
                    'row_attr': {'class': 'form-group mb-3'},
                    'label_attr': {'class': 'form-label fw-bold required-field'},
                    'attr': {'class': 'form-control'}
                }) }}
                
                {{ form_row(form.billingAddress.addressLine2, {
                    'row_attr': {'class': 'form-group mb-3'},
                    'attr': {'class': 'form-control'}
                }) }}
                
                <div class="row">
                    <div class="col-md-4">
                        {{ form_row(form.billingAddress.city, {
                            'row_attr': {'class': 'form-group mb-3'},
                            'label_attr': {'class': 'form-label fw-bold required-field'},
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.billingAddress.state, {
                            'row_attr': {'class': 'form-group mb-3'},
                            'label_attr': {'class': 'form-label fw-bold required-field'},
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.billingAddress.zipCode, {
                            'row_attr': {'class': 'form-group mb-3'},
                            'label_attr': {'class': 'form-label fw-bold required-field'},
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                </div>
                
                {{ form_row(form.billingAddress.phoneNumber, {
                    'row_attr': {'class': 'form-group mb-3'},
                    'label_attr': {'class': 'form-label fw-bold required-field'},
                    'attr': {'class': 'form-control'}
                }) }}
                
                {{ form_row(form.billingAddress.emailAddress, {
                    'row_attr': {'class': 'form-group mb-3'},
                    'label_attr': {'class': 'form-label fw-bold required-field'},
                    'attr': {'class': 'form-control'}
                }) }}
            </div>
            
            {# Shipping Address Section #}
            <div class="form-section">
                <h3 class="form-section-title">
                    <i class="fas fa-truck me-2"></i>Shipping Address
                </h3>
                
                {{ form_row(form.shippingAddress.shippingOption, {
                    'row_attr': {'class': 'form-group mb-3'},
                    'label_attr': {'class': 'form-label fw-bold'}
                }) }}
                
                <div id="different-shipping-address" style="display: none;">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        In a complete implementation, this would show additional fields for a different shipping address.
                    </div>
                </div>
            </div>
            
            {# Submit Button #}
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg px-5">
                    <i class="fas fa-lock me-2"></i>Pay Now
                </button>
                <button type="reset" class="btn btn-secondary btn-lg px-5 ms-3">
                    <i class="fas fa-redo me-2"></i>Reset
                </button>
            </div>
            
            {{ form_end(form) }}
            
            {# Security Notice #}
            <div class="alert alert-info mt-4">
                <i class="fas fa-shield-alt me-2"></i>
                <strong>Secure Payment:</strong> Your information is protected with 256-bit SSL encryption.
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Card type detection
            const cardNumberInput = document.querySelector('#credit_card_cardNumber');
            const visaIcon = document.getElementById('visa-icon');
            const mastercardIcon = document.getElementById('mastercard-icon');
            const amexIcon = document.getElementById('amex-icon');
            
            if (cardNumberInput) {
                cardNumberInput.addEventListener('input', function() {
                    const cardNumber = this.value.replace(/\s/g, '');
                    
                    // Reset all icons
                    [visaIcon, mastercardIcon, amexIcon].forEach(icon => {
                        icon.classList.remove('active');
                    });
                    
                    // Detect card type
                    if (/^4/.test(cardNumber)) {
                        visaIcon.classList.add('active');
                    } else if (/^5[1-5]/.test(cardNumber)) {
                        mastercardIcon.classList.add('active');
                    } else if (/^3[47]/.test(cardNumber)) {
                        amexIcon.classList.add('active');
                    }
                });
            }
            
            // Shipping address toggle
            const shippingOptions = document.querySelectorAll('input[name="credit_card[shippingAddress][shippingOption]"]');
            const differentShippingDiv = document.getElementById('different-shipping-address');
            
            shippingOptions.forEach(option => {
                option.addEventListener('change', function() {
                    if (this.value === 'different_address') {
                        differentShippingDiv.style.display = 'block';
                    } else {
                        differentShippingDiv.style.display = 'none';
                    }
                });
            });
            
            // Format card number
            if (cardNumberInput) {
                cardNumberInput.addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\s+/g, '').replace(/[^0-9]/gi, '');
                    let matches = value.match(/\d{4,16}/g);
                    let match = matches && matches[0] || '';
                    let parts = [];
                    
                    for (let i = 0, len = match.length; i < len; i += 4) {
                        parts.push(match.substring(i, i + 4));
                    }
                    
                    if (parts.length) {
                        e.target.value = parts.join(' ');
                    } else {
                        e.target.value = value;
                    }
                });
            }
            
            // Form validation feedback
            const form = document.getElementById('payment-form');
            form.addEventListener('submit', function(e) {
                // Add validation logic here
                const requiredFields = form.querySelectorAll('[required]');
                let isValid = true;
                
                requiredFields.forEach(field => {
                    if (!field.value.trim()) {
                        field.classList.add('is-invalid');
                        isValid = false;
                    } else {
                        field.classList.remove('is-invalid');
                    }
                });
                
                if (!isValid) {
                    e.preventDefault();
                    alert('Please fill in all required fields.');
                }
            });
        });
    </script>
{% endblock %}
